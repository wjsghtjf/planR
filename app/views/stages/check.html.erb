<%=form_tag stage_show_path(params[:room_id]), { method: 'post', id: 'checkAnswer'} do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :stage_level, @stage_level %>
    <%= hidden_field_tag :is_wrong_answer, @is_wrong_answer  %>
<% end %>

<script>

$(document).ready( function() {
    <% if @is_wrong_answer %>
        document.getElementById("checkAnswer").submit();
    <% else %>
        document.getElementById("checkAnswer").submit();
    <% end %>
});
</script>