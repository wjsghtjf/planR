<!--여기서 부터 자바스크립트입니다 -->
<script>
  
var imgInput=null;	

                
$(document).ready( function() {
    
    $(document).on('change', '.btn-file :file', function() {
      var input = $(this),
   		  label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
		  input.trigger('fileselect', [label]);
		});
		
   		$('.btn-file :file').on('fileselect', function(event, label) {
	    var input = $(this).parents('.input-group').find(':text'), log = label;
		    if( input.length ) {
		      if(log.length)
		        input.val(log);
		        showImage();
		    } else {
		        if( log ) alert(log);
		    }
		    $('#is_delete').val(true);
		    resetImageTheme();
		}); 
		$("#imgInp").change(function(){
    	    if (this.files && this.files[0]) {
    	        imgInput = this;
    	        $("#btn_cancel").css("display","inline");
		      	showImage();
    	   	    $("#img-upload").css("display","none");
    	    }
	    });

		
		<% if @stage %>
		  if( <%=@edit_mode%>==false){
		    var img_url = "<%=@stage.image.url %>";
		    setImage(img_url);
		    
		  }else{
		    $("#img-upload").css("display","none");
		    if("<%=@stage_file_name %>".length){
		      $("#btn_cancel").css("display","inline");
		      showImage();
		    }else{
		      $("#btn_cancel").css("display","none");
		    }
		  }
		  
		<% end %>
		
		<% if @stage_level==0 %>
		  if( <%=@edit_mode%>==false){
		    var img_url = "<%=@room.image.url %>";
		    
  		  	setImage(img_url);
		  }else{
		    $("#img-upload").css("display","none");
		    if("<%=@room_file_name %>".length){
		      $("#btn_cancel").css("display","inline");
		      showImage();
		    }else{
		      $("#btn_cancel").css("display","none");
		    }
		  }
		  
		<% end %>
	});
	
function showImage(){

    if(imgInput)
       readURL(imgInput);
    else if(<%=@stage_level %>==0){
      var img_url = "<%=@room ? @room.image.url : '' %>";
      setImage(img_url);
    }
    else if("<%=@stage_file_name %>".length){
      var img_url = "<%=@stage ? @stage.image.url : '' %>";
      setImage(img_url);
    }
}


function readURL(input) {
    if (input.files && input.files[0]) {
    
        var reader = new FileReader();
        reader.onload = function (e) {
			$("#img-upload").css("display","block");
          $('#img-upload').attr('src', e.target.result);
        }
      reader.readAsDataURL(input.files[0]);
    }
}



function setImage(img_url){
  $("#img-upload").css("display","block");
  $('#img-upload').attr('src', img_url);
}

 function cancelImage(){
  imgInput=null;
  $('.btn-file :file').parents('.input-group').find(':text').val("");
  $("#imgInp").val('');
  $("#btn_cancel").css("display","none");
  $('#img-upload').attr("src","");
  $("#img-upload").css("display","none");
  
  $('#is_delete').val(true);
  resetImageTheme();
        
}
function resetImageTheme(){
    $('#img-area').css('display','none');
    $('#img-border').css('display','none');
    if(<%= ( @stage && @stage.mode=="true") ? "true" : "false" %>)
    	$("#stage_answer").val("");
}

</script>
