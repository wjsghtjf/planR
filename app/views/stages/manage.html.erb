            <% else %>
                <h2 style="font-size:30pt;"><b><center><%=(@stage_level ==0) ? "#{@room.title}" : ":: Stage #{@stage_level}" %></center></b></h2>
                <br>
                <%= render 'form_manage', stage: @stage, :class => "form_manage" %>
            <% end %>
     	 <% end %>
          
    

    </div>
