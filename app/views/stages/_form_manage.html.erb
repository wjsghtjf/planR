
<%=hidden_field_tag :stage_level, params[:stage_level] %>

<div class='form-group'>
  <label for='title'>스테이지 제목</label>
  <text  class='form-control' name='title' ><%=@stage.title %></text>
  
</div>

        <%= render 'dialog_modal' %>
        

<div class='form-group '>
  
  <label for='content'>내용</label>
  <p class='form-control' name='content' ><%=@stage.content%> </p>

</div>
<div class='form-group'>
  
  <label for='hint1'>힌트</label>
  <text  class='form-control' name='hint1'><%=@stage.hint1%></text>
</div>


  <label for='answer'>정답</label>
  <text  class='form-control' name='answer'><%=@stage.answer%></text>
</div>

<!--이미지가 있는 경우에만 -->


<% if @stage.image && @stage.image.length>0 %>
<div>
    <div class='form-group'>
        <label>Uploaded Image</label><br/>
         <%= image_tag @stage.image.url(:main) , id: 'img-upload', class: 'img-main' if @stage.image.url %>
    </div>
</div>
<% end %>

<%if @room.publish_stage_id < @stage.id %>
  <%= link_to "수정하기",  stage_manage_each_path(@room.id,@stage_level, edit_mode: true) , class: 'btn btn-default' %>
  <button class='btn btn-default' data-toggle="modal" data-target="#delete">
   삭제하기
  </button>
  <button class='btn btn-default' data-toggle="modal" data-target="#publish">
    배포하기
  </button>
  
<% end %>

<p style="color:red;"><b>[주의] 한 번 배포 후에는 스테이지 수정이 불가능합니다.</b></p>