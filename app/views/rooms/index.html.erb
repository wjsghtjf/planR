<div class="col s10">
<% @rooms.each do |room| %>
<% @publish_stage_id=room.publish_stage_id%>  

<div class="index-content">
    <div class="container">
        <div class="col-lg-4">
            <div class="card">
                <!-- 이미지 유저가 올린걸로 바꿀 수 있게 해주세요 -->
