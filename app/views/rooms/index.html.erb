<center>
<br>
<br>
<br>

  <nav>
    <div class="nav-wrapper">
      <form>
        <div class="input-field">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      </form>
    </div>
  </nav>
  
<br>
<br>
<br>

<div class="row">
<div class="col s1"></div>
<div class="col s10">
<% @rooms.each do |room| %>
<% @publish_stage_id=room.publish_stage_id%>  

<div class="card_list" ontouchstart="this.classList.toggle('hover');">
  
  <div class="card">  
    <a href="<%=room_show_path(room.id) %>">
      <% if room.image.url.nil? %>
      <div class="card_front nonthumb">
        <div class="card-symbol"><%=room.title%><hr>
        </div>
      </div>
      <hr>
      <div class="card_back nonthumb">
         <div class="card-symbol"><%=room.title%><hr>
         <p><%=truncate room.content, length: 100 %></p>
        </div>
      </div>
      <% else %>
        <div class="card_front thumbnail">
          <div class="card-symbol"><%=room.title%><hr>
        </div>
        </div>
        <div class="card_back thumbnail">
          <div class="card-symbol"><%=room.title%><hr>
         <p><%=truncate room.content, length: 100 %></p>
        </div>
        <%= image_tag room.image.url(:thumb )%>
        
        </div>  
                  
      <% end %>
  </a>
  </div>
</div>

<% end %>
</div>

<div class="col s1"></div>

</div>
</center>