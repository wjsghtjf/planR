        <div class="card_fin"> <i class="material-icons">check_circle</i></div>
        <% end %>
        
        
        
        
        <div class="card-symbol"><%=room.title%>
        [
        
        <%= room.difficulty.round(2) %>

        
        ]<hr></div>
      </div>
      <hr>
      <div class="card_back <%=(room.image.url.nil?) ? "nonthumb" : "thumbnail" %>" style="<%="background-image: url(#{room.image.url(:thumb)})" if !room.image.url.nil?%>">
