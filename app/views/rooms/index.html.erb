                <img src="/assets/mainpage_img.jpg">
                </a>
                <p><%=truncate room.title, length: 20 %></p>
                <!--<p><%=truncate room.content, length: 28  %></p>-->
    
                <p>
                    <strong>좋아요 : </strong>
                    <%= @likecount %>명
                </p>
                
    <p>
      <% if @roomCal.like %>
      
      <form action='/rooms/index/like' method='post'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button> 좋아요 취소</button>  
      </form>
      
      <% else %>
      <form action='/rooms/index/like' method='post'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button> 좋아요</button>  
      </form>
      
      <% end %>
    </p>
    
    
   
            </div>
        </div>
    </div>
</div>
<% end %>
</div>

